
% Standard SJTU VI colors
\definecolor{sjtu-red}{HTML}{C8161E}
\definecolor{sjtu-blue}{HTML}{0086D1}
\definecolor{sjtu-orange}{HTML}{F08300}
\definecolor{sjtu-silver}{HTML}{B5B5B6}
\definecolor{sjtu-gray}{HTML}{E6E6E6}
\definecolor{sjtu-green}{HTML}{338D1D}
\definecolor{sjtu-purple}{HTML}{004098}

% Theme colors of the slides, customizable
\setbeamercolor{primary}{
    fg = sjtu-red,
    bg = white
}
\setbeamercolor{alert}{
    fg = sjtu-orange,
    bg = white
}
\setbeamercolor*{info}{ % definitions, etc
    fg = sjtu-blue,
    bg = white
}
\setbeamercolor*{example}{
    fg = sjtu-green,
    bg = white
}
\setbeamercolor*{important}{ % theorems block, etc
    fg = sjtu-purple,
    bg = white
}
\setbeamercolor*{unimportant}{ % page number, etc.
    fg = black!60!white,
    bg = white
}

% Detailed colors
\setbeamercolor*{structure}{parent = primary}
\setbeamercolor*{alerted text}{parent = alert}

\setbeamercolor*{title}{parent = primary}
\setbeamercolor*{subtitle}{parent = primary}

\setbeamercolor*{item}{parent = primary}

\setbeamercolor*{itemize item}{parent = primary}
\setbeamercolor*{itemize subitem}{parent = primary}
\setbeamercolor*{itemize subsubitem}{parent = primary}

\setbeamercolor*{enumerate item}{parent = primary}
\setbeamercolor*{enumerate subitem}{parent = primary}
\setbeamercolor*{enumerate subsubitem}{parent = primary}
\setbeamercolor*{enumerate mini template}{parent = primary}

\setbeamercolor*{description item}{parent = primary}

\setbeamercolor*{footline}{parent = unimportant}

\setbeamercolor*{titlelike}{parent = primary}
\setbeamercolor*{frametitle}{parent = primary}

\setbeamercolor*{section title}{parent = primary}
\setbeamercolor*{section title shaded}{
    use = section title,
    fg  = section title.fg!45
}
\setbeamercolor*{section in toc}{parent = primary}

\setbeamercolor*{subsection title}{parent = primary}

\setbeamercolor{bibliography entry title}{parent = normal text}
\setbeamercolor*{bibliography entry location}{parent = unimportant}


\setbeamercolor{block body}{
    use = structure,
    fg = black,
    bg = structure.fg!5
}

\setbeamercolor{block title}{
    use = structure,
    fg = structure.fg,
    bg = structure.fg!5
}

\setbeamercolor{block body example}{
    fg = black,
    bg = sjtu-green!5
}

\setbeamercolor{block title example}{
    fg = sjtu-green,
    bg = sjtu-green!5
}

\setbeamercolor{block body alerted}{
    use = alerted text,
    fg = black,
    bg = alerted text.fg!5
}

\setbeamercolor{block title alerted}{
    use = alerted text,
    fg = alerted text.fg,
    bg = alerted text.fg!5
}

