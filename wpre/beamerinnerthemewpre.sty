\newtheorem{wproposition}[theorem]{Proposition}
\newtheorem{wcorollary}[theorem]{Corollary}
\newtheorem{wfact}[theorem]{Fact}
\newtheorem{wclaim}[theorem]{Claim}

\theoremstyle{wpreexmp}
